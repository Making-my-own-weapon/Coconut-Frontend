{ 
  "family": "coconut-frontend-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::928747727316:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::928747727316:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "coconut-frontend-container",
      "image": "928747727316.dkr.ecr.ap-northeast-2.amazonaws.com/coconut-frontend",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "PORT", 
          "valueFrom": "arn:aws:ssm:ap-northeast-2:928747727316:parameter/coconut/port"
        },
        {
          "name": "HOST",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:928747727316:parameter/coconut/host"
        },
        {
          "name": "VITE_SOCKET_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:928747727316:parameter/coconut/vite/socket_url"
        },
        {
          "name": "VITE_API_BASE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:928747727316:parameter/coconut/vite/api_base_url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/coconut-frontend",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }, 
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80 || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 